[user]
  name = Gustavo Santos
  signingKey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIN6jpSle2MDWM6pTPtTFBrArA9uaNoXsH2+EV6a5rV/o

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/opt/1Password/op-ssh-sign"

[commit]
  gpgsign = true
  template = ~/dotfiles-public/gitmessage

[github]
  user = gustavofsantos

[core]
  editor = nvim

[pretty]
  default = format:"%C(yellow)%h %C(blue)%cs %C(reset)%s%C(red)%d %C(green)%an%C(reset), %C(cyan)%ar'"
  deploy = format:"%h  %cs  %<(15,trunc)%an  %s"

[push]
  config = default
  default = tracking

[diff]
  tool = difftastic

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[pager]
  difftool = true

[alias]
  dft = difftool

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = blue
  frag = magenta
  old  = red
  new  = green

[color "status"]
  added = yellow
  changed = green
  untracked = blue

[alias]
  c       = commit
  cm      = commit -m
  s       = status
  d       = diff
  ds      = diff --staged
  dw      = diff --color-words
  l       = log --pretty=default
  lg      = log --color --graph --pretty=format:'%C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr) %C(bold blue)<%an>%C(reset)' --abbrev-commit --branches
  rh      = reset --hard

[init]
  defaultBranch = main
